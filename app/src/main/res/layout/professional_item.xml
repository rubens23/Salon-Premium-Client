<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingEnd="60dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    xmlns:tools="http://schemas.android.com/tools">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfessional"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabelProfessionalName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/alt_black"
        android:textSize="28sp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/ivProfessional"
        app:layout_constraintTop_toBottomOf="@id/ivProfessional"
        tools:text="chester bennington"
        />











</androidx.constraintlayout.widget.ConstraintLayout>