<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabelChooseProfessional2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:textSize="26sp"
        android:textColor="@color/alt_black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="46dp"
        android:text="Escolha um Profissional"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/professionalsRecyclerView"
        android:layout_width="0dp"
        android:layout_marginTop="36dp"
        android:paddingStart="46dp"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        tools:listitem="@layout/professional_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:overScrollMode="never"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelChooseProfessional2"/>

</androidx.constraintlayout.widget.ConstraintLayout>